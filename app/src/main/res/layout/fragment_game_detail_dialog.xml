<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#171A21"
    android:padding="16dp"
    tools:context=".ui.fragments.GameDetailDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Imagen del juego -->
        <ImageView
            android:id="@+id/gameImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/game_image"
            android:scaleType="fitCenter" />

        <!-- Nombre del juego -->
        <TextView
            android:id="@+id/gameName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="@string/hint_game_name" /> <!-- Placeholder -->

        <!-- Fecha de lanzamiento -->
        <TextView
            android:id="@+id/gameReleaseDate"
            android:text="@string/pdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:textColor="#A9A9A9"
            android:textSize="14sp"
            android:hint="@string/hint_release_date" /> <!-- Placeholder -->

        <!-- Descripción -->
        <TextView
            android:id="@+id/gameDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="4dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:hint="@string/hint_description" /> <!-- Placeholder -->

        <!-- Género -->
        <TextView
            android:id="@+id/gameGenre"
            android:text="@string/genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#A9A9A9"
            android:textSize="14sp"
            android:textStyle="italic"
            android:hint="@string/hint_genre" /> <!-- Placeholder -->

        <!-- Sección de desarrolladores -->
        <TextView
            android:id="@+id/gameDevelopers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:hint="@string/hint_developers" /> <!-- Placeholder -->

        <!-- Sección de publicadores -->
        <TextView
            android:id="@+id/gamePublishers"
            android:text="@string/publishers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:hint="@string/hint_publishers" /> <!-- Placeholder -->

        <!-- Botón para cerrar -->
        <Button
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#1B2838"
            android:text="Cerrar"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
